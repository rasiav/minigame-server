{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts",
        "rootDir": "src",
        "removeComments": true
    }
}